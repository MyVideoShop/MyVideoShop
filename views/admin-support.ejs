<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Supportnachrichten – Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .support-messages {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .support-box {
        width: 250px;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        cursor: pointer;
        transition: transform 0.2s, background-color 0.2s;
    }

    .support-box:hover {
        background: #eaeaea;
        transform: scale(1.02);
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
    }

    .modal-content {
        background-color: #fff;
        margin: 10% auto;
        padding: 30px;
        border-radius: 10px;
        width: 90%;
        max-width: 600px;
        position: relative;
    }

    .close {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 28px;
        font-weight: bold;
        color: #333;
        cursor: pointer;
    }

    .delete-button {
        background-color: #d9534f;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        cursor: pointer;
        margin-top: 20px;
    }

    .delete-button:hover {
        background-color: #c9302c;
    }
  </style>
</head>
<body class="dark">
  <header>
    <h1><a href="/admin" class="dashboard-title">Admin Dashboard</a></h1>
  </header>

  <main>
    <h1>Supportnachrichten</h1>

    <div class="support-messages">
      <% if (messages.length === 0) { %>
          <p>Keine Nachrichten vorhanden.</p>
      <% } else { %>
          <% messages.forEach(function(message, index) { %>
              <div class="support-box" onclick="openSupportModal(<%= index %>)">
                  <h3><%= message.title %></h3>
                  <p><%= message.description.substring(0, 50) %>...</p>
              </div>
          <% }) %>
      <% } %>
    </div>

    <!-- Modal -->
    <div id="supportModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeSupportModal()">&times;</span>
            <h2 id="modalTitle"></h2>
            <p id="modalDescription"></p>
            <form id="deleteForm" method="POST">
                <button type="submit" class="delete-button" onclick="return confirm('Möchtest du diese Nachricht wirklich löschen?')">Nachricht löschen</button>
            </form>
        </div>
    </div>
  </main>

  <script>
      const messages = <%- JSON.stringify(messages) %>;

      function openSupportModal(index) {
          const modal = document.getElementById("supportModal");
          const titleEl = document.getElementById("modalTitle");
          const descEl = document.getElementById("modalDescription");
          const form = document.getElementById("deleteForm");

          titleEl.textContent = messages[index].title;
          descEl.textContent = messages[index].description;
          form.action = `/admin/support/delete/${messages[index]._id}`;

          modal.style.display = "block";
      }

      function closeSupportModal() {
          document.getElementById("supportModal").style.display = "none";
      }

      window.onclick = function(event) {
          const modal = document.getElementById("supportModal");
          if (event.target === modal) {
              modal.style.display = "none";
          }
      };
  </script>
</body>
</html>
