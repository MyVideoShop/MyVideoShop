<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Videos verwalten â€“ Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .video-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .video-box {
      width: 250px;
      padding: 1.5rem;
      background: #1e1e1e;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      cursor: pointer;
      transition: transform 0.2s, background-color 0.2s;
      display: flex;
      flex-direction: column;
    }

    .video-box:hover {
      background-color: #2a2a2a;
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.6);
    }

    .video-box h3 {
      margin: 0 0 10px 0;
      color: #fff;
    }

    .video-box p {
      margin: 0;
      color: #ccc;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      word-break: break-word;
    }
  </style>
</head>
<body class="dark">
  <header>
    <h1><a href="/admin" class="dashboard-title">Admin Dashboard</a></h1>
  </header>

  <main>
    <h1>Videos verwalten</h1>

    <div class="video-grid">
      <% if (videos.length === 0) { %>
        <p>Keine Videos vorhanden.</p>
      <% } else { %>
        <% videos.forEach(function(video) { %>
          <div class="video-box">
            <h3><%= video.title %></h3>
            <p><%= video.description %></p>
          </div>
        <% }) %>
      <% } %>
    </div>
  </main>
</body>
</html>
