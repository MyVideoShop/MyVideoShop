<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Videos verwalten â€“ Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .video-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .video-box {
      width: 300px;
      background: #1e1e1e;
      border-radius: 12px;
      padding: 1rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.3);
      transition: transform 0.2s, background-color 0.2s;
    }

    .video-box:hover {
      background-color: #2a2a2a;
      transform: translateY(-5px);
    }

    .video-box h3 {
      margin: 0 0 8px;
      color: #fff;
    }

    .video-box p {
      color: #ccc;
      margin: 0 0 10px;
    }

    .video-wrapper {
      position: relative;
      width: 100%;
      padding-bottom: 56.25%;
      height: 0;
    }

    .video-wrapper iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>
</head>
<body class="dark">
  <header>
    <h1><a href="/admin" class="dashboard-title">Admin Dashboard</a></h1>
  </header>

  <main>
    <h1>Videos verwalten</h1>

    <% if (videos.length === 0) { %>
      <p>Keine Videos vorhanden.</p>
    <% } else { %>
      <div class="video-grid">
        <% videos.forEach(video => { %>
          <div class="video-box">
            <h3><%= video.title %></h3>
            <p><%= video.description %></p>
            <div class="video-wrapper">
              <iframe src="<%= video.embedUrl %>" allowfullscreen></iframe>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
