<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Besucherz√§hler</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="counter-box">
    <h1>Willkommen!</h1>
    <p>Besuche insgesamt: <strong><%= totalVisitors %></strong></p>
    <p>Aktuell online: <strong id="online-users">0</strong></p>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.on("updateOnlineUsers", (count) => {
      document.getElementById("online-users").textContent = count;
    });
  </script>
</body>
</html>
