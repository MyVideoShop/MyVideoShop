<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= shopName %> – Startseite</title>
  <link rel="stylesheet" href="/css/style.css" />
<style>
  .video-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 2rem;
  }

  .video-box {
    background: #1e1e1e;
    padding: 1rem;
    border-radius: 10px;
    color: white;
  }

  .video-iframe {
    width: 100%;
    height: 360px;
    border: none;
    margin-top: 0.5rem;
    border-radius: 6px;
  }
</style>
</head>
<body class="dark">
  <header>
    <img src="/logo.avif" alt="Logo" class="logo" />
    <h1><%= shopName %></h1>
  </header>

  <main>
    <h2>Willkommen auf der Startseite!</h2>
    <div class="video-list">
  <% if (videos.length === 0) { %>
    <p>Derzeit keine Videos verfügbar.</p>
  <% } else { %>
    <% videos.forEach(video => { %>
      <div class="video-box">
        <h3><%= video.title %></h3>
        <iframe src="<%= video.embedUrl %>" frameborder="0" allowfullscreen class="video-iframe"></iframe>
        <p><%= video.description %></p>
      </div>
    <% }) %>
  <% } %>
</div>
  </main>

  <!-- Creator Login Button -->
  <button id="loginButton" class="corner-btn">Creator Login</button>

  <!-- Support Button -->
  <button id="supportButton" class="corner-btn" style="right: 160px;">Support kontaktieren</button>

  <!-- Support Modal -->
  <div class="modal hidden" id="supportModal">
    <div class="modal-content">
      <h2>Supportnachricht</h2>
      <form id="supportForm">
        <input type="text" name="title" placeholder="Titel" required><br>
        <textarea name="description" placeholder="Beschreibung (min. 10 Zeichen)" minlength="10" maxlength="1000" required></textarea><br>
        <div class="modal-buttons">
          <button type="submit">Senden</button>
          <button type="button" id="closeSupportModal">Schließen</button>
        </div>
      </form>
      <div id="supportSuccess" class="form-message"></div>
    </div>
  </div>

  <!-- Login Modal -->
  <div id="loginModal" class="modal hidden">
    <div class="modal-content">
      <h2>Creator/Admin Login</h2>
      <form id="loginForm">
        <input type="text" name="name" placeholder="Name*" required />
        <input type="email" name="email" placeholder="E-Mail (nur für Bewerbung)" />
        <input type="password" name="password" placeholder="Passwort*" required />

        <div id="formMessage" class="form-message"></div>

        <div class="modal-buttons">
          <button type="submit" name="action" value="apply">Bewerben</button>
          <button type="submit" name="action" value="login">Einloggen</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Skripte -->
  <script src="/js/script.js"></script>
  <script src="/js/supportModal.js"></script>
</body>
</html>
