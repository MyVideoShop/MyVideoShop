<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Video hochladen – Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body.dark {
      background-color: #121212;
      color: #fff;
      font-family: Arial, sans-serif;
    }

    header {
      padding: 20px;
    }

    .dashboard-title {
      color: white;
      text-decoration: none;
      font-size: 24px;
    }

    main {
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
    }

    h1 {
      margin-bottom: 30px;
    }

    .input-box, .textarea-box, .file-box {
      background-color: #1e1e1e;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 20px;
      border: none;
      color: white;
      width: 100%;
      box-sizing: border-box;
      font-size: 16px;
    }

    .upload-btn {
      width: 100%;
      padding: 15px;
      font-size: 16px;
      background-color: #28a745;
      border: none;
      color: white;
      border-radius: 10px;
      cursor: pointer;
    }

    .upload-btn:hover {
      background-color: #218838;
    }

    .category-container {
      margin-bottom: 20px;
    }

    .category-label {
      margin-bottom: 5px;
      font-weight: bold;
    }

    .category-box {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      padding: 10px;
      border-radius: 10px;
      background-color: #1e1e1e;
    }

    .category-pill {
      background-color: #333;
      padding: 8px 12px;
      border-radius: 20px;
      font-size: 14px;
      cursor: pointer;
      user-select: none;
    }

    .category-pill.selected {
      background-color: #007bff;
    }
  </style>
</head>
<body class="dark">
  <header>
    <h1><a href="/admin" class="dashboard-title">Admin Dashboard</a></h1>
  </header>

  <main>
    <h1>Video hochladen</h1>

<% if (typeof success !== 'undefined' && success) { %>
  <div style="background-color:#2ecc71; padding:15px; border-radius:10px; margin-bottom:20px;">
    Upload erfolgreich! Das Video wird im Hintergrund verarbeitet.
  </div>
<% } %>

    <form action="/admin/upload" method="POST" enctype="multipart/form-data">
      <input type="text" name="title" placeholder="Videotitel" class="input-box" required />

      <div class="file-box">
        <input type="file" name="video" accept="video/*" required />
      </div>

      <textarea name="description" class="textarea-box" placeholder="Videobeschreibung..." rows="6"></textarea>

      <div class="category-container">
        <div class="category-label">Ausgewählte Kategorien:</div>
        <div id="selectedCategories" class="category-box"></div>
      </div>

      <div class="category-container">
        <div class="category-label">Vorhandene Kategorien:</div>
        <div id="availableCategories" class="category-box">
          <% if (typeof categories !== 'undefined') { %>
            <% categories.forEach(function(category) { %>
              <div class="category-pill" data-category="<%= category %>"><%= category %></div>
            <% }) %>
          <% } %>
        </div>
      </div>

      <input type="hidden" name="categories" id="categoriesInput" />

      <button type="submit" class="upload-btn">Video veröffentlichen</button>
    </form>
  </main>

  <script>
    const availableBox = document.getElementById('availableCategories');
    const selectedBox = document.getElementById('selectedCategories');
    const hiddenInput = document.getElementById('categoriesInput');
    const selectedCategories = new Set();

    function updateHiddenInput() {
      hiddenInput.value = Array.from(selectedCategories).join(',');
    }

    function createPill(name) {
      const pill = document.createElement('div');
      pill.className = 'category-pill';
      pill.textContent = name;
      pill.dataset.category = name;
      pill.addEventListener('click', () => {
        selectedCategories.delete(name);
        selectedBox.removeChild(pill);
        const original = [...availableBox.children].find(el => el.dataset.category === name);
        if (original) original.classList.remove('selected');
        updateHiddenInput();
      });
      return pill;
    }

    availableBox.addEventListener('click', e => {
      if (e.target.classList.contains('category-pill')) {
        const name = e.target.dataset.category;
        if (!selectedCategories.has(name)) {
          selectedCategories.add(name);
          e.target.classList.add('selected');
          selectedBox.appendChild(createPill(name));
        } else {
          selectedCategories.delete(name);
          e.target.classList.remove('selected');
          const toRemove = [...selectedBox.children].find(el => el.dataset.category === name);
          if (toRemove) selectedBox.removeChild(toRemove);
        }
        updateHiddenInput();
      }
    });
  </script>
</body>
</html>
