<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Statistiken – Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .stats-section {
      padding: 2rem;
    }

    .stat-box, .creator-box {
      background-color: #1e1e1e;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .stat-box:hover, .creator-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.6);
      background-color: #2a2a2a;
    }

    .toggle-buttons {
      margin-top: 1rem;
    }

    .toggle-buttons button {
      margin-right: 10px;
      padding: 6px 12px;
      background-color: #444;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .creator-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1rem;
    }
  </style>
</head>
<body class="dark">
  <header>
    <h1><a href="/admin" class="dashboard-title">Admin Dashboard</a></h1>
  </header>
  <main class="stats-section">
    <!-- Einnahmen-Box -->
    <div class="stat-box">
      <h2>Gesamteinnahmen: <span id="revenueAmount">1.234,56 €</span></h2>
      <div class="toggle-buttons">
        <button onclick="changeRevenue('day')">Heute</button>
        <button onclick="changeRevenue('month')">Diesen Monat</button>
        <button onclick="changeRevenue('total')">Insgesamt</button>
      </div>
    </div>

    <!-- Top 3 Creator -->
    <div class="creator-box">
      <h2>Top 3 Creator nach Einnahmen (<span id="creatorPeriod">Insgesamt</span>)</h2>
      <div class="toggle-buttons">
        <button onclick="changeCreators('day')">Heute</button>
        <button onclick="changeCreators('month')">Diesen Monat</button>
        <button onclick="changeCreators('total')">Insgesamt</button>
      </div>
      <div class="creator-list" id="creatorList">
        <div class="dashboard-box">Creator A – 456,78 €</div>
        <div class="dashboard-box">Creator B – 321,00 €</div>
        <div class="dashboard-box">Creator C – 289,50 €</div>
      </div>
    </div>
  </main>
  <script>
    function changeRevenue(period) {
      const data = {
        day: '123,45 €',
        month: '789,01 €',
        total: '1.234,56 €'
      };
      document.getElementById('revenueAmount').textContent = data[period];
    }

    function changeCreators(period) {
      const creatorData = {
        day: ['X – 120,00 €', 'Y – 110,00 €', 'Z – 100,00 €'],
        month: ['M – 600,00 €', 'N – 550,00 €', 'O – 500,00 €'],
        total: ['A – 456,78 €', 'B – 321,00 €', 'C – 289,50 €']
      };

      document.getElementById('creatorPeriod').textContent = {
        day: 'Heute',
        month: 'Diesen Monat',
        total: 'Insgesamt'
      }[period];

      const list = document.getElementById('creatorList');
      list.innerHTML = '';
      creatorData[period].forEach(entry => {
        const div = document.createElement('div');
        div.className = 'dashboard-box';
        div.textContent = entry;
        list.appendChild(div);
      });
    }
  </script>
</body>
</html>
