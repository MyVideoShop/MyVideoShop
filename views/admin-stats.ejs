<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Statistiken – Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    .stats-section {
      padding: 2rem;
    }

    .stat-box, .creator-box, .dashboard-box {
      background-color: #1e1e1e;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .stat-box:hover, .creator-box:hover, .dashboard-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.6);
      background-color: #2a2a2a;
    }

    .toggle-buttons {
      margin-top: 1rem;
    }

    .toggle-buttons button {
      margin-right: 10px;
      padding: 6px 12px;
      background-color: #444;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .creator-list, .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1rem;
    }

    .section-title {
      margin-top: 3rem;
      font-size: 1.5rem;
      color: white;
    }
  </style>
</head>
<body class="dark">
  <header>
    <h1><a href="/admin" class="dashboard-title">Admin Dashboard</a></h1>
  </header>
  <main class="stats-section">
    <!-- Einnahmen-Box -->
    <div class="stat-box">
      <h2 id="revenueTitle">Gesamteinnahmen: <span id="revenueAmount"><%= revenue.total.toFixed(2) %> €</span></h2>
      <div class="toggle-buttons">
        <button onclick="changeRevenue('day')">Heute</button>
        <button onclick="changeRevenue('month')">Diesen Monat</button>
        <button onclick="changeRevenue('total')">Insgesamt</button>
      </div>
    </div>

    <!-- Top 3 Creator -->
    <div class="creator-box">
      <h2>Top 3 Creator nach Einnahmen (<span id="creatorPeriod">Insgesamt</span>)</h2>
      <div class="toggle-buttons">
        <button onclick="changeCreators('day')">Heute</button>
        <button onclick="changeCreators('month')">Diesen Monat</button>
        <button onclick="changeCreators('total')">Insgesamt</button>
      </div>
      <div class="creator-list" id="creatorList">
        <% creators.total.forEach(c => { %>
          <div class="dashboard-box"><%= c.name %> – <%= c.amount.toFixed(2) %> €</div>
        <% }) %>
      </div>
    </div>

    <!-- Top-Kategorien -->
    <h2 class="section-title">Top 5 Kategorien</h2>
    <div class="dashboard-grid">
      <% Object.entries(categories).slice(0, 5).forEach(([cat, count]) => { %>
        <div class="dashboard-box">
          <div class="dashboard-box-title"><%= cat %></div>
          <p><%= count %> Käufe</p>
        </div>
      <% }) %>
    </div>

    <!-- Besucherstatistik -->
    <h2 class="section-title">Besucher</h2>
    <div class="dashboard-grid">
      <div class="dashboard-box">
        <div class="dashboard-box-title">Aktuelle Besucher</div>
        <p><%= visitors.online %> gerade online</p>
      </div>
      <div class="dashboard-box">
        <div class="dashboard-box-title">Seitenaufrufe gesamt</div>
        <p><%= visitors.total %></p>
      </div>
    </div>
  </main>

  <script>
    const revenueData = {
      day: <%= revenue.day.toFixed(2) %>,
      month: <%= revenue.month.toFixed(2) %>,
      total: <%= revenue.total.toFixed(2) %>
    };

    const creatorData = {
      day: <%- JSON.stringify(creators.day) %>,
      month: <%- JSON.stringify(creators.month) %>,
      total: <%- JSON.stringify(creators.total) %>
    };

    function changeRevenue(period) {
      document.getElementById('revenueAmount').textContent = revenueData[period].toFixed(2) + ' €';
    }

    function changeCreators(period) {
      document.getElementById('creatorPeriod').textContent = {
        day: 'Heute',
        month: 'Diesen Monat',
        total: 'Insgesamt'
      }[period];

      const list = document.getElementById('creatorList');
      list.innerHTML = '';
      creatorData[period].forEach(entry => {
        const div = document.createElement('div');
        div.className = 'dashboard-box';
        div.textContent = `${entry.name} – ${entry.amount.toFixed(2)} €`;
        list.appendChild(div);
      });
    }
  </script>
</body>
</html>
